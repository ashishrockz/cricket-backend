# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=5000
APP_NAME=CricketScore

# ============================================
# DATABASE
# ============================================
MONGODB_URI=mongodb://localhost:27017/cricket_scoring
MONGODB_URI_TEST=mongodb://localhost:27017/cricket_scoring_test

# ============================================
# JWT CONFIGURATION
# ============================================
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_refresh_secret_key_change_in_production
JWT_REFRESH_EXPIRE=30d

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# CORS
# ============================================
CORS_ORIGIN=http://localhost:3000

# ============================================
# ADMIN DEFAULT CREDENTIALS
# ============================================
ADMIN_EMAIL=admin@cricketscore.com
ADMIN_PASSWORD=Admin@123456

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=debug

# ============================================
# EMAIL / SMTP (for OTP login & notifications)
# ============================================
# Gmail example: use an App Password (not your account password)
# Outlook/Office365: host=smtp.office365.com, port=587, secure=false
# AWS SES: host=email-smtp.<region>.amazonaws.com, port=587, secure=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
SMTP_FROM=CricketScore <your_email@gmail.com>

# ============================================
# SUBSCRIPTION / PAYMENT (future integration)
# ============================================
# Razorpay (India)
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# Stripe (International)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# ============================================
# FILE STORAGE (for logos, ad media â€” optional)
# ============================================
# AWS S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-south-1
AWS_S3_BUCKET=

# Cloudinary (alternative)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
